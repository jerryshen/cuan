<link href="/javascripts/ext-2.2.1/resources/css/ext-all.css" media="screen" rel="stylesheet" type="text/css" />
<link href="/stylesheets/grid.css" media="screen" rel="stylesheet" type="text/css" />
<div id="list-view">
  <form style="margin: 10px 0px;" id="search_form">
    <label for="search_name">
      姓名：
    </label>
    <input type="text" value="" name="search_name" id="search_name"/>
    <input class="button" type="button" id="btnSearch" value="搜索"/>
  </form>
  <div>
    <div class="nav">
      <span class="button" id="newItem" onclick="$page.showNewView()"><img  src="/images/icons/new.png"/>新建</span>
    </div>
    <div id="grid-wrap">
    </div>
  </div>
</div>
<div id="new-view" style="display:none">
  <% @fee_cutting = FeeCutting.new %>
  <%= render "new", :object => @fee_cutting %>
</div>
<%= javascript_include_tag "ExtListPage.js" %>
<%= javascript_include_tag 'ext-2.2.1/ext-base.js','ext-2.2.1/ext-all.js' %>
<script>
  var users = <%= User.to_json%>
  var getUserName = function(value, p, record){
    return users[value]
  }
  //{header: [dataIndex(首字母大写)], renderer: money(Function),menuDisabled: [true],
  // dataIndex: "fieldName" ,width: 100, sortable: [false], resizable: [false]}
  //框[]中的为默认值
  Ext.onReady(function(){
    var columns = [{
        header: "ID",
        dataIndex: 'id',
        width: 30,
        sortable: true,
        type: "int",
        resizable: false
      }, {
        header: "教职工",
        dataIndex: 'user_id',
        width: 100,
        sortable: true,
        renderer : getUserName
      }, {
        header: "住房公积金",
        dataIndex: 'room_fee',
        sortable: true
      }, {
        header: "医疗保险",
        dataIndex: 'med_fee',
        sortable: true
      }, {
        header: "失业保险",
        dataIndex: 'job_fee',
        sortable: true
      }, {
        header: "职工个人教育费",
        dataIndex: 'selfedu_fee',
        sortable: true
      }, {
        header: "其他扣款一",
        dataIndex: 'other_fee3',
        sortable: true
      }, {
        header: "其他扣款二",
        dataIndex: 'other_fee2',
        sortable: true
      }, {
        header: "其他扣款三",
        dataIndex: 'other_fee3',
        sortable: true
      }]
    var controllerName = "fee_cuttings";
    options = {
      baseUrl: "http://" + window.location.host + "/" + controllerName,
      gridTitle: "扣款信息列表",
      newItemLink: "newItem",
      columns: columns
    }
    $page = new ExtListPage(options);
  })
</script>
