<% form_for(@role) do |f| %>
  <fieldset>
  <legend>新建角色</legend>
  <%= f.error_messages %>
  <p>
    <%= f.label :field, "名称" %>
    <%= f.text_field :name, :class => "required" %>
  </p>
  <p class="bbar">
    <%= f.submit '保存' %>
    <input type="button" onclick="$page.showListView()" value="取消" />
  </p>
  </fieldset>
<% end %>