<%= f.error_messages %>
<p>
  <%= f.label :user_id, "离退休人员" %>
  <%= f.select :user_id, get_retired_staffs.collect {|p| [ p.name, p.id ] }, {:include_blank => "请选择离退休人员..." }, :class => "required" %>
</p>
<p>
  <%= f.label :year, "年度" %>
  <%= select_year(Time.now.year, {:start_year => 2009, :end_year => 2015}, :name => 'retired_fee_cutting_record[year]') %>
</p>
<p>
  <%= f.label :month, "月份" %><br />
  <%= select_month(Time.now.month, {:use_month_numbers => true}, :name => 'retired_fee_cutting_record[month]')  %>
</p>
<p>
  <%= f.label :other_fee1, "其他扣款1" %>
  <%= f.text_field :other_fee1, :class => "number" %>
</p>
