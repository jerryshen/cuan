<%= f.error_messages %>
<p>
  <%= f.label :user_id, "教职工姓名" %>
  <%= f.select :user_id, User.all.collect {|p| [ p.name, p.id ] }, {:include_blank => "请选择教职工..." }, :class => "required" %>
</p>
<p>
  <%= f.label :term, "学期" %>
  <% year = Time.now.year.to_s  %>
  <%= f.select :term, [["请选择学期..."],[year+"年春期","1"],[year+"2009年秋期","2"]], :class => "required"  %>
</p>
<p>
  <%= f.label :fee, "金额" %>
  <%= f.text_field :fee, :class => "required" %>
</p>
<p>
  <%= f.label :date, "发放日期" %>
  <%= f.datetime_select :date %>
</p>