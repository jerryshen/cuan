<% form_for(@page_role) do |f| %>
  <fieldset>
    <legend>新建页面－角色关系</legend>
    <%= f.error_messages %>
    <p>
      <%= f.label :field, "页面" %>
      <%= f.select :page_id, pages_for_select, {:include_blank => "请选择页面..." }, :class => "required" %>
  </p>
  <p>
    <%= f.label :field, "角色" %>
    <%= f.select :role_id, roles_for_select, {:include_blank => "请选择角色..." }, :class => "required" %>
  </p>
  <p class="bbar">
  <%= f.submit '保存' %>
    <input type="button" onclick="$page.showListView()" value="取消" />
  </p>
</fieldset>
<% end %>