<script>
    var users = <%= User.to_json%>
  var getUserName = function(value, p, record){
    return users[value]
  }
  Ext.onReady(function(){
    var columns = [{
        header: "序号",
        dataIndex: 'id',
        width: 40,
        sortable: true,
        type: "int",
        resizable: false
      }, {
        header: "姓名",
        dataIndex: 'user_id',
        sortable: true,
        renderer: getUserName
      }, {
        header: "年度",
        dataIndex: 'year',
        sortable: true
      }, {
        header: "月份",
        dataIndex: 'month',
        sortable: true
      }, {
        header: "生活补贴",
        dataIndex: 'life_be',
        sortable: true
      }, {
        header: "补贴补差",
        dataIndex: 'diff_be',
        sortable: true
      }, {
        header: "活工资补贴",
        dataIndex: 'livesa_be',
        sortable: true
      }, {
        header: "电视补贴",
        dataIndex: 'tv_be',
        sortable: true
      }, {
        header: "驻蓉补贴",
        dataIndex: 'beaulty_be',
        sortable: true
      }, {
        header: "其他",
        dataIndex: 'other_be',
        sortable: true
      }]
    var controllerName = "college_be_records";
    options = {
      baseUrl: "http://" + window.location.host + "/" + controllerName,
      gridTitle: "学院补贴记录信息列表",
      newItemLink: "newItem",
      columns: columns
    }
    $page = new ExtListPage(options);
  })
</script>
