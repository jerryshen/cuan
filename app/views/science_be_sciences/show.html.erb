<fieldset>
  <legend>查看科研津贴</legend>
  <p>
    <b>员工姓名:</b>
    <%=h @science_be_science.user.name if @science_be_science.user %>
  </p>

  <p>
    <b>科研津贴:</b>
    <%=h @science_be_science.science_be %>
  </p>

  <p>
    <b>年份:</b>
    <%=h @science_be_science.year %>
  </p>

  <p>
    <b>月份:</b>
    <%=h @science_be_science.month %>
  </p>

  <p>
    <b>发放日期:</b>
    <%=h @science_be_science.date %>
  </p>
  <p class="bbar">
    <input type="button" onclick="$page.showListView()" value="返回列表" />
  </p>
</fieldset>