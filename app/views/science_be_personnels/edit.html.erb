<% form_for :science_be_personnel, :url => { :action => 'update', :id => @science_be_personnel.id }, :html => { :method => 'put'} do |f| %>
  <fieldset>
    <legend>修改科研津贴</legend>
    <%= f.error_messages %>
    <p>
      <%= f.label :science_be, "科研津贴" %>
      <%= f.text_field :science_be, :class => "required" %>
    </p>
    <p>
      <%= f.label :year, "年度" %>
      <%= select_year(Time.now.year, {:start_year => 2009, :end_year => 2015}, :name => 'science_be_personnel[year]') %>
    </p>
    <p>
      <%= f.label :month, "月份" %>
      <%= f.text_field :month, :class => "required" %>
    </p>
    <p class="bbar">
      <%= f.submit '更新' %>
      <input type="button" onclick="$page.showListView()" value="取消" />
    </p>
  </fieldset>
<% end %>