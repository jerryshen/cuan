<% form_for(@page) do |f| %>
  <fieldset>
    <legend>修改页面</legend>
    <%= f.error_messages %>
    <%= render :partial => 'form', :locals => { :f => f }  %>
    <p class="bbar">
      <%= f.submit '更新' %>
      <input type="button" onclick="$page.showListView()" value="取消" />
    </p>
  </fieldset>
<% end %>
